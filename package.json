{
  "name": "pink",
  "version": "13.0.0",
  "private": true,
  "description": "Личный проект «Пинк» от HTML Academy",
  "devDependencies": {
    "autoprefixer": "7.2.x",
    "gulp-csso": "3.0.1",
    "gulp-svgstore": "7.0.0",
    "gulp-rename": "1.4.0",
    "gulp-imagemin": "4.1.0",
    "gulp-webp": "3.0.0",
    "run-sequence": "2.2.1",
    "gulp-posthtml": "3.0.4",
    "posthtml-include": "1.2.0",
    "del": "3.0.0",
    "browser-sync": "2.23.x",
    "gulp": "3.9.x",
    "gulp-plumber": "1.2.x",
    "gulp-postcss": "7.0.x",
    "gulp-sass": "3.1.x",
    "@htmlacademy/editorconfig-cli": "1.x",
    "stylelint": "8.4.x",
    "stylelint-config-htmlacademy": "0.1.x"
  },
  "scripts": {
    "editorconfig": "editorconfig-cli",
    "stylelint": "stylelint 'source/sass/**/*.scss' --syntax scss",
    "test": "npm run editorconfig && npm run stylelint",
    "build": "gulp build",
    "start": "npm run build && gulp serve"
  },
  "browserslist": [
    "last 2 versions",
    "IE 11",
    "Firefox ESR"
  ],
  "editorconfig-cli": [
    "*.json",
    "*.js",
    "source/*.html",
    "source/js/**/*.js",
    "source/img/**/*.svg",
    "source/sass/**/*.{sass,scss}"
  ],
  "engines": {
    "node": "8.9"
  }
}
